@model List<MyPortfolio.Models.Education>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<table class="table table-bordered">
    <tr class="font-weight-bolder">
        <td>Eğitim Numarası</td>
        <td>Eğitim Başlığı</td>
        <td>Eğitim Alt Başlığı</td>
        <td>Eğitim Tarihi</td>
        <td>Eğitim Açıklaması</td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {

    <tr>
        <td>@item.EducationID</td>
        <td>@item.Title</td>
        <td>@item.SubTitle</td>
        <td>@item.EducationDate</td>
        <td>@item.Description</td>
        <td>
            <a href="/Education/DeleteEducation/@item.EducationID" class="btn btn-danger">Eğitim Bilgisi Sil</a>
        </td>
        <td>
            <a href="/Education/UpdateEducation/@item.EducationID" class="btn btn-success">Eğitim Bilgisi Güncelle</a>
        </td>
    </tr>

    }
</table>
<a href="/Education/CreateEducation/" class="btn btn-primary">Eğitim Bilgisi Ekle</a>

