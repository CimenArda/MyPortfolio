@model MyPortfolio.Models.Contact
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

@Html.Action("PartialHead", "Default")

<body>

    @Html.Action("PartialSpinner", "Default")

    <!-- Spinner End -->
    <!-- Navbar Start -->
    @Html.Action("PartialNavbar", "Default")

    <!-- Navbar End -->
    <!-- Header Start -->
    @Html.Action("PartialProfile", "Default")

    <!-- Header End -->
    <!-- About Start -->
    @Html.Action("PartialAbout", "Default")

    <!-- About End -->
    <!-- Education Start -->
    @Html.Action("PartialEducation", "Default")

    <!-- Education End -->
    <!-- Experience Start -->
    @Html.Action("PartialExperience", "Default")

    <!-- Exparience End -->
    <!-- Skills Start -->
    @Html.Action("PartialSkill", "Default")

    <!-- Skills End -->
    <!-- Service Start -->
    @Html.Action("PartialService", "Default")


    <!-- Service End -->
    <!-- Portfolio Start -->
    @Html.Action("PartialPortfolio", "Default")

    <!-- Portfolio End -->
    <!-- Testimonial Start -->
    @Html.Action("PartialTestimonial", "Default")

    <!-- Testimonial End -->
    <!-- Contact Start -->
    <div class="container-fluid" id="pigraContact">
        <div class="container">
            <div class="row g-0">
                @Html.Action("PartialContactSideBar", "Contact1")

                
                <div class="col-lg-9">
                    <div class="contact-content h-100 pt-6 ps-6 pb-6">
                        <div class="bg-light p-4">
                            <div class="row g-5">

                                @Html.Action("PartialContactAddress", "Contact1")

                                <div class="col-xl-7 wow fadeInUp" data-wow-delay="0.3s">
                                    <div>
                                        <form method="post">
                                            <div class="row g-3">
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="text" name="NameSurname" class="form-control border-0" id="name" placeholder="Ad-Soyad">
                                                        <label for="name">Adınız</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="email" name="Email" class="form-control border-0" id="email" placeholder="Email Adresi">
                                                        <label for="email">Mail Adresiniz</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="phone" name="PhoneNumber" class="form-control border-0" id="phone" placeholder="Telefon">
                                                        <label for="phone">Telefon Numaranız</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.category, "Kategori Seç", new { @class = "form-control border-0" })
                                                        <label for="project">Mesaj Kategorisi</label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating">
                                                        <input type="text" name="Subject" class="form-control border-0" id="subject" placeholder="Konu">
                                                        <label for="subject">Konu</label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating">
                                                        <textarea class="form-control border-0" name="MessageDetail" placeholder="Mesaj" id="message" style="height: 120px"></textarea>
                                                        <label for="message">Mesaj</label>
                                                    </div>

                                                </div>
                                                <div class="col-12">
                                                    <button class="btn btn-primary w-100 py-3">Mesajı Gönder</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                @Html.Action("PartialContactLocation", "Contact1")

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Action("PartialContact", "Default")


    <!-- Contact End -->
    <!-- Footer Start -->
    @Html.Action("PartialFooter", "Default")


    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="fa fa-arrow-up"></i></a>


    @Html.Action("PartialScript", "Default")

</body>

</html>