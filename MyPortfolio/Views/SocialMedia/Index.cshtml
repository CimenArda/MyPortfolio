@using MyPortfolio.Models
@model List<SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<h2>Sosyal Medya Hesapları Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Sosyal Medya Numarası</th>
        <th>Başlık</th>
        <th>İkon</th>
        <th>Durumu</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.SocialMediaID</td>
            <td>@item.Title</td>
            <td>@item.Icon</td>
            @if (item.Status == false)
            {
                <td><a href="/SocialMedia/SocialMediaStatusChangeToTrue/@item.SocialMediaID" class="btn btn-primary">Hesap Gösterimi Aktif Yap</a></td>

            }
            else
            {
                <td><a href="/SocialMedia/SocialMediaStatusChangeToFalse/@item.SocialMediaID" class="btn btn-info">Hesap Gösterimi Pasif Yap</a></td>
            }
            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger">Sil</a></td>
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-primary">Sosyal Medya Hesabı Ekle</a>
