@model List<MyPortfolio.Models.Work>
@{
    ViewBag.Title = "WorkList";
    Layout = "~/Views/Admin/Index.cshtml";
}
<h2>Çalışmalarım Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Çalışmaların  Numarası</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim Yolu</th>
        <th>Github Yolu</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.WorkID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td>@item.GithubUrl</td>
            <td><a href="/Work/DeleteWork/@item.WorkID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Work/UpdateWork/@item.WorkID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Work/CreateWork/" class="btn btn-primary">Çalışma Ekle</a>
