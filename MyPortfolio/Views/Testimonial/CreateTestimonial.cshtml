@model MyPortfolio.Models.Testimonial

@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}



<h2>Referans Ekle</h2>
<br />
<form action="/Testimonial/CreateTestimonial" method="post">

    <div>
        <label>Referans Adı-Soyadı</label>
        <input type="text" name="NameSurname" required class="form-control" />
    </div>
    <div>
        <label>Referans Ünvanı</label>
        <input type="text" required name="Title" class="form-control" />
    </div>
    <div>
        <label>Referans Yorumu</label>
        <input type="text" name="Comment" class="form-control" />
    </div>
    <div>
        <label>Referans Resim Yolu</label>
        <input type="text" name="ImageUrl" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Ekle</button>
</form>